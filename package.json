{
  "name": "simple-calculator",
  "version": "1.0.0",
  "description": "A simple calculator to demonstrate the use of ES6",
  "main": "app/index.js",
  "scripts": {
    "clear": "rimraf app/bundle",
    "prepush": "npm run lint",
    "lint": "./node_modules/.bin/eslint app/**/*.js",
    "build": "npm run clear && babel app/src -d app/bundle --source-maps",
    "watch": "npm run build -- --watch",
    "start": "npm run build && http-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexandreolavio/simple-calculator.git"
  },
  "keywords": [
    "html",
    "js",
    "library"
  ],
  "author": "Alexandre Olavio <alexandreolavio@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexandreolavio/simple-calculator/issues"
  },
  "homepage": "https://github.com/alexandreolavio/simple-calculator#readme",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-env": "^1.3.2",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "husky": "^0.11.9",
    "jsdom": "^11.0.0",
    "jsdom-global": "^3.0.2",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "systemjs": "^0.19.47"
  }
}
